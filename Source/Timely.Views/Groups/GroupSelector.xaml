<UserControl x:Class="Timely.Views.Groups.GroupSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sampleData="clr-namespace:Timely.ViewModels.Groups.SampleData;assembly=Timely.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=sampleData:SampleGroupSelectorViewModel, IsDesignTimeCreatable=True}"
             d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <Label Grid.Column="0" Content="Group:" VerticalContentAlignment="Center" />
        <ComboBox Grid.Column="1" ItemsSource="{Binding GroupNames}" Margin="0,0,10,0" />
        <Button Grid.Column="2" Content="Edit..." Margin="0,0,3,0" Visibility="Collapsed"/>
        <Button Grid.Column="3" Content="New..." Command="{Binding NewGroupCommand}"/>
        
    </Grid>
</UserControl>
